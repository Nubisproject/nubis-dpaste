{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "base_ami": "",
    "owner": "",
    "release": null,
    "build": null
  },
  "builders": [
  {
    "type": "amazon-ebs",
    "name": "amazon-us-west-2",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-west-2",
    "source_ami": "{{user `base_ami`}}",
    "instance_type": "m3.medium",
    "ssh_username": "ubuntu",
    "ami_name": "mozilla nubis-dpaste v/{{user `release`}} t/{{timestamp}}",
    "ami_description": "Nubis - Dpaste",
    "ami_regions" : [ "us-east-1" ],
    "tags" : {
        "release": "{{user `release`}}.{{user `build`}}",
        "owner": "{{user `owner`}}"
    }
  }
  ],
  "provisioners": [
  {
    "type": "puppet-masterless",
    "manifest_dir": "nubis/puppet",
    "manifest_file": "nubis/puppet/init.pp",
    "execute_command": "{{.FacterVars}} {{if .Sudo}} sudo -E {{end}} puppet apply --verbose --modulepath='/etc/nubis-puppet/' {{if ne .HieraConfigPath \"\"}}--hiera_config='{{.HieraConfigPath}}' {{end}} {{if ne .ManifestDir \"\"}}--manifestdir='{{.ManifestDir}}' {{end}} --detailed-exitcodes {{.ManifestFile}}",
    "facter": {
        "ami_release": "{{user `release`}}"
    }
  },
  {
    "type": "shell",
    "inline": ["sudo chmod 777 /var/www/dpaste"]
  },
  {
    "type": "file",
    "source": "dpaste/",
    "destination": "/var/www/dpaste"
  },
  {
    "type": "file",
    "source": "nubis/bin/local.py",
    "destination": "/var/www/dpaste/dpaste/settings/local.py"
  },
  {
    "type": "file",
    "source": "nubis/bin/wsgi.py",
    "destination": "/var/www/dpaste/wsgi.py"
  },
  {
    "type": "shell",
    "script": "nubis/bin/install.sh"
  }
  ]
}

